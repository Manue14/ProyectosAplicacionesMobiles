<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_dynamic_primary60"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:text="Pueba de Listeners" />

    <Button
        android:id="@+id/btn_clase_interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Clase interna"/>

    <Button
        android:id="@+id/btn_clase_anonima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Clase anónima"/>

    <Button
        android:id="@+id/btn_3en1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Método 3 en 1"/>

    <Button
        android:id="@+id/btn_implements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Método implements"/>

    <TextView
        android:id="@+id/view_respuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_dynamic_primary60"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"/>

</LinearLayout>